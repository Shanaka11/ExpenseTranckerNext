datasource db {
  url          = env("DATABASE_URL")
  provider     = "mysql"
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model Tag {
  id           String        @id @default(cuid())
  name         String        @unique
  transactions Transaction[]
  user         String
}

model Transaction {
  id          String   @id @default(cuid())
  date        DateTime
  description String
  amount      Float
  user        String
  tags        Tag[]
}

